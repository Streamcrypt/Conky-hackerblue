conky.config = {
    alignment = 'top_left',
    gap_x = 2,
    gap_y = -25,
    background = true,
    double_buffer = true,
    update_interval = 0.5,
    cpu_avg_samples = 2,
    net_avg_samples = 2,
    override_utf8_locale = true,
    use_xft = true,
    font = 'JetBrainsMono Nerd Font:size=11',
    xftalpha = 0.9,
    uppercase = false,
    own_window = true,
    own_window_type = 'desktop',
    own_window_argb_visual = true,
    own_window_argb_value = 180,
    own_window_colour = '#0A0A1A',  -- semi-transparent dark background
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    minimum_width = 310, minimum_height = 217,
    maximum_width = 310,
    draw_shades = false,
    draw_outline = false,
    draw_borders = false,
    draw_graph_borders = true,
    default_color = '#9D00FF',      -- purple-blue neon (fallback)
    color1 = '#AA00FF',             -- magenta-purple accent
    color2 = '#00BFFF',             -- network blue (used for >=50%)
    color3 = '#FFD700',             -- yellow (20-49)
    color4 = '#FF4500',             -- red (<20)
    color5 = '#00FF00',             -- green (charging)
};

conky.text = [[
# Color selection: charging overrides; otherwise choose by % thresholds
${if_match "${acpiacadapter}" == "on-line"}${color5}\
${else}${if_match ${battery_percent BAT0} >= 50}${color2}\
${else}${if_match ${battery_percent BAT0} >= 20}${color3}\
${else}${color4}\
${endif}${endif}${endif}

${font JetBrainsMono Nerd Font:bold:size=12}BATTERY${font}
${hr 2}

# Show only "Charging" or "Discharging" (no "Status:" or "Not charging")
${if_match "${acpiacadapter}" == "on-line"}Charging${else}Discharging${endif}${alignr}${battery_percent BAT0}%

${battery_bar 12,300 BAT0}

${color}  # reset to default color after the battery block
]];
